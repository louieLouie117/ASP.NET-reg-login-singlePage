@using WeddingPlanner.Models;

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css">
    <title>Wedding Info</title>
</head>

<body>


    <div class="formHeader_container">
        <h1>@ViewBag.selectedWedding.WedderOne & @ViewBag.selectedWedding.WedderTwo Wedding </h1>
        <a href="/goToDashboard"> Dashboard</a>
        <a href="/logout"> logout</a>
    </div>
    <h2>@ViewBag.selectedWedding.WeddingDay</h2>
    <h3>@ViewBag.selectedWedding.Address</h3>

    <div class="allGuests_container">
        <h4>Guest:</h4>
        <ul>
            @foreach (var item in ViewBag.allGuests)
            {
                <li>@item.FirstName @item.LastName</li>
            }

        </ul>
    </div>

</body>

</html>