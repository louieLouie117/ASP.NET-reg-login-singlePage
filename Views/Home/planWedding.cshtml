@using WeddingPlanner.Models
@model Wedding

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css">
    <title>Plan aweeding</title>
</head>

<body>
    <div class="formHeader_container">
        <h1>Hello, @ViewBag.DisplayUser.FirstName Plan a wedding!</h1>
        <a href="/goToDashboard"> Dashboard</a>
        <a href="/logout"> logout</a>
    </div>

    <form asp-action="CreateWedding" asp-controller="Home" method="post">

        <input asp-for="WedderOne">
        <input asp-for="WedderTwo">
        <input asp-for="WeddingDay">
        <textarea asp-for="Address" cols="30" rows="10"></textarea>

        <input type="submit" value="submit">

    </form>


</body>

</html>